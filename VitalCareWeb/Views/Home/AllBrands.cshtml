@using VitalCareWeb.ViewModels.Brand;
@model IEnumerable<BrandViewModel>

@{
    ViewData["Title"] = "Brands";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
    <div class="container">
        <div class="row align-items-center inner-banner">
            <div class="col-md-12 col-12 text-center">
                <h2 class="breadcrumb-title">Brands</h2>
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item" aria-current="page">Brands</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->


<section class="services-section-fourteen">
    <div class="container">

        @foreach (var brand in Model)
        {
            <div class="row align-items-center pb-3 pt-3">

                @*==== Show medium devices ======*@
                <div class="d-md-block d-none">
                    <div class="row">
                        <div class="col-md-2 col-12 custom-short-by">
                            <img class="img-fluid px-3 px-sm-1 px-md-0" src="@brand.ImageUrl" height="200" width="200" alt="Post Image">
                        </div>
                        <div class="col-md-10 col-12 custom-short-by">
                            <h3 class="title pharmacy-title">@brand.Name</h3>
                            <div class="sort-title" style="font-size:16px;margin-top:20px;">@brand.Description</div>
                        </div>
                    </div>
                </div>

                @*==== Show in small devices ======*@
                <div class="d-block d-md-none">
                    <div class="col-md-10 col-12 custom-short-by">
                        <h3 class="title pharmacy-title text-center">@brand.Name</h3>
                        <div class="d-block d-md-none text-center p-3">
                            <img class="img-fluid px-3 px-sm-1 px-md-0" style="max-height:250px;max-width:250px" src="@brand.ImageUrl"  alt="Post Image">
                        </div>
                        <div class="sort-title px-2" style="margin-top:20px;">@brand.Description</div>
                    </div>
                </div>

            </div>

            <div class="row mt-3 d-flex justify-content-center">
                @foreach (var product in brand.Products)
                {
                    <div class="col-md-6 col-lg-4 col-xl-4 product-custom">
                        <div class="profile-widget">
                            <div class="doc-img">
                                <a href="@product.PurchaseUrl" target="_blank">
                                    <img class="img-fluid" alt="Product image" style="max-height:250px" src="@product.ImageUrl">
                                </a>
                            </div>
                            <div class="pro-content">
                                <h3 class="title pb-4">
                                    <a href="@product.PurchaseUrl" target="_blank" tabindex="-1">@product.Name</a>
                                </h3>
                               @* <p>@product.ShortDescription</p>*@
                                <div class="row align-items-center">
                                    <div class="col-lg-6">
                                        <span class="price">@product.PriceString</span>
                                        @if (@product.Price != product.OldPrice)
                                        {
                                            <span class="price-strike">@product.OldPriceString</span>
                                        }                                       
                                    </div>
                                    <div class="col-lg-6 text-end">
                                        <a href="@product.PurchaseUrl" target="_blank" class="cart-icon shoppingCartIcon"><i class="fas fa-shopping-cart"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <hr />
        }

    </div>
</section>

