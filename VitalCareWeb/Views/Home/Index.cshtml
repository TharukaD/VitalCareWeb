                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-tab2-tab" data-bs-toggle="pill" data-bs-target="#pills-tab2" role="tab" aria-controls="pills-tab2" aria-selected="false">Mission</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-tab3-tab" data-bs-toggle="pill" data-bs-target="#pills-tab3" role="tab" aria-controls="pills-tab3" aria-selected="false">Values</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-tab1" role="tabpanel" aria-labelledby="pills-tab1-tab" tabindex="0">
                            <div class="row">
                                <div class="card contact-card" style="border: 1px solid #06A5A0;">
                                    <div class="card-body">
                                        <div class="contact-details">
                                            <h4>Vision</h4>
                                            <p>
                                                VitalCare will be recognized as a preeminent healthcare company that
                                                strives to provide outstanding patient experience, superior clinical
                                                outcomes, and an improved quality of life for the people it serves.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-tab2" role="tabpanel" aria-labelledby="pills-tab2-tab" tabindex="0">
                            <div class="row">
                                <div class="card contact-card" style="border: 1px solid #06A5A0;">
                                    <div class="card-body">
                                        <div class="contact-details">
                                            <h4>Mission</h4>
                                            <p>
                                                The mission of VitalCare is to provide compassionate,
                                                patient centered care of the highest quality.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-tab3" role="tabpanel" aria-labelledby="pills-tab3-tab" tabindex="0">
                            <div class="row">
                                <div class="card contact-card" style="border: 1px solid #06A5A0;">
                                    <div class="card-body">
                                        <div class="contact-details">
                                            <h4>Values</h4>
                                            <p>
                                                “Patients First” is our reason for being and the focus of all our activities.
                                                Our responsibility is to provide the best possible care and outcome for every
                                                patient. We strive to exceed our patient expectations for comfort and convenience.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          
        <div class="row">
            <div class="banner-content aos d-flex justify-content-center" data-aos="fade-up" style="margin-top:20px;padding-bottom:0px !important">
                <a asp-controller="Home" asp-action="AboutUs" style="background-color: #06A5A0;border-color:#06A5A0 !important;" class="btn specialHomeBtn">Read More</a>
            </div>
        </div>

    </div>
</section>
<!-- /About Us -->

<!-- Counter Section -->
<section class="counter-section">
    <div class="ban-bg">
        <img src="~/assets/img/bg/counter-bg.png" alt="design-image" class="img-fluid bg-06">        
    </div>
    <div class="container">
        <div class="row">
            @foreach(var record in Model.CounterRecords)
            {
                <div class="col-lg-3 col-sm-6 ">
                    <div class="count-box">
                        <span class="count-icon">
                            <img src="@record.ImageUrl" alt="doctor-image" style="max-width:150px; max-height:150px;" class="img-fluid">
                        </span>
                        <div class="count-info">
                            <h3><span class="count-digit">@record.CountInfo</span> +</h3>
                            <p>@record.Name</p>
                        </div>
                    </div>
                </div>
            }          
        </div>
    </div>
</section>
<!-- /Counter Section -->

<!-- Locations Section -->
<section class="doctors-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 aos" data-aos="fade-up">
                <div class="section-header-one section-header-slider">
                    <h2 class="section-titl">Locations / Clinics</h2>
                </div>
            </div>
            <div class="col-md-6 aos" data-aos="fade-up">
                <div class="owl-nav slide-nav-2 text-end nav-control"></div>
            </div>
        </div>
        <div class="row" data-aos="fade-up">
            @foreach (var location in @Model.Locations)
            {
                <div class="col-md-6 col-lg-3 col-sm-6 aos px-sm-3 px-5" data-aos="fade-up">
                    <div class="blog grid-blog">
                        <div class="blog-image">
                            <a asp-route-locationId="@location.Id" asp-action="Services" asp-controller="Home">
                                <img class="img-fluid px-3 px-sm-1 px-md-0" src="@location.ImageUrl" height="100" width="100" alt="Post Image">
                            </a>
                        </div>
                        <div class="blog-content">
                            <h3 class="blog-title">
                                <a>
                                    @location.Name
                                </a>
                            </h3>
                            <p class="mb-0">
                                @location.ShortDescription
                            </p>
                        </div>
                    </div>
                </div>
            }                             
        </div>
    </div>
</section>
<!-- /Doctors Section -->

<!-- services Section -->
<section class="services-section-fourteen">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 aos" data-aos="fade-up">
                <div class="section-header-fourteen">
                    <h2>Our Services</h2>
                    <p>Our Professional Services</p>
                </div>
            </div>
        </div>

        <partial model="@Model.ServiceGroups" name="/Views/Home/_ServicesList.cshtml" />

        <partial name="/Views/Home/_InsuranceList.cshtml" />
    
    </div>
</section>
<!-- /services Section -->

<!-- Why choose us -->
<section class="work-sections" style="margin-top:50px;margin-bottom:50px">
    <div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 work-details">
				<div class="section-header-one aos" data-aos="fade-up">
					<h2 class="section-titles text-center">Why choose us</h2>
				</div>
				<div class="row">
                    @foreach(var record in Model.WhyChooseUsRecords)
                    {
                        <div class="col-lg-6 col-md-6 aos" data-aos="fade-up">
                            <div class="work-info">
                                <div class="work-icon">
                                    <span><img src="@record.ImageUrl" height="100" width="100" alt="search-doctor-icon"></span>
                                </div>
                                <div class="work-content">
                                    <h5>@record.Name</h5>
                                    <p>@record.Description</p>
                                </div>
                            </div>
                        </div>
