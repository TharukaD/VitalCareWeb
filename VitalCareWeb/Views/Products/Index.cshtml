@using VitalCareWeb.ViewModels.Product;
@model IEnumerable<ProductViewModel>;
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Products";
}

@section header{
    <h3 class="content-header-title">Products</h3>
    <div class="row breadcrumbs-top">
        <div class="breadcrumb-wrapper col-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Products" asp-action="Index">Products</a>
                </li>
                <li class="breadcrumb-item">
                    <a>List</a>
                </li>
            </ol>
        </div>
    </div>
}

@section headerMenu
{
    <a class="btn box-shadow-2 px-2 mb-1 AddEditBtn"
        data-ajax="true"
       data-ajax-update="#DivModalTarget"
       data-ajax-begin="blockUI"
       data-ajax-complete="unblockUI"
       data-toggle="tooltip"
       asp-action="Add"
       asp-controller="Products">
        <i class="fa fa-plus-circle" style="margin-right:5px;font-size:17px;"></i>
        New
    </a>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row ">
                    <div class="col-md-12 ">
                        <div class="table-responsive">
                            <table class="table align-items-center table-sm " id="ProductsTable">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Brand</th>
                                        <th>Short Description</th>
                                        <th>Long Description</th>
                                        <th>Price</th>     
                                        <th>Old Price</th>
                                        <th>Priority</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var product in @Model)
                                    {
                                        <tr>
                                            <td>
                                                <img height="120" width="120" src="@product.ImageUrl" />
                                                <div style="margin-top:5px;">
                                                    <a data-ajax="true"
                                                        data-ajax-update="#DivModalTarget"
                                                        data-ajax-begin="blockUI"
                                                        data-ajax-complete="unblockUI"
                                                        data-toggle="tooltip"
                                                        asp-action="UploadProductImage"
                                                        asp-controller="Products"
                                                        asp-route-id="@product.Id"
                                                        title="Upload Image"><i class="fa fa-upload"> Upload</i></a>
                                                </div>                                                
                                            </td>
                                            <td> @product.Name</td>
                                            <td> @product.BrandName</td>
                                            <td> @product.ShortDescription</td>
                                            <td>
                                                <span class="d-inline-block text-truncate modyfiedText">
                                                    @product.LongDescription
                                                </span>  
                                            </td>
                                            <td> @product.Price</td>
                                            <td> @product.OldPrice</td>
                                            <td> @product.Priority</td>
                                            <td class="text-center">
                                                <div>            
                                                    <a data-ajax="true"
                                                        data-ajax-update="#DivModalTarget"
                                                        data-ajax-begin="blockUI"
                                                        data-ajax-complete="unblockUI"
                                                        data-toggle="tooltip"
                                                        asp-action="Edit"
                                                        asp-controller="Products"
                                                        asp-route-id="@product.Id">
                                                        Edit
                                                    </a>
                                                    <span> | </span>
                                                    <a data-ajax="true"
                                                        data-ajax-update="#DivModalTarget"
                                                        data-ajax-begin="blockUI"
                                                        data-ajax-complete="unblockUI"
                                                        data-toggle="tooltip"
                                                        asp-action="Delete"
                                                        asp-controller="Products"
                                                        asp-route-id="@product.Id">
                                                        <span class="text-danger">Delete</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>                                       
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .modyfiedText {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 300px !important;
        max-height: 150px !important;
    }

</style>

@section Scripts{
    <script>
        $(function () {

            $(".navItems").removeClass("active");
            $("#ProductsNavId").addClass("active");

            $("#ProductsTable").dataTable(
                {
                    bLengthChange: true,
                    bPaginate: true,
                    ordering: true,
                    language: {
                        search: "",
                        searchPlaceholder: "Search this list...",
                    }
                });

        });
    </script>
}