@using VitalCareWeb.Constants;
@using VitalCareWeb.ViewModels.Product;
@model AddEditProductViewModel

@{
    Layout = "_LayoutModal";
    ViewBag.Title = $"{@ViewContext.RouteData.Values["Action"]} Product";
    ViewBag.ModalId = "AddEditProductViewModel";
    ViewBag.ModalSize = ModelConstants.ModalSize.Large;
}

<form id="AddEditProductForm" class="pt-2 col-md-12"
      asp-action="@ViewContext.RouteData.Values["Action"]"
      asp-controller="@ViewContext.RouteData.Values["Controller"]"
      data-ajax="true"
      data-ajax-begin="validateForm_@ViewBag.ModalID"
      data-ajax-complete="unblockUI"
      data-ajax-failure="onAjaxError"
      data-ajax-update="#AjaxFormResult_@ViewBag.ModalID"
      data-ajax-method="POST">

    <input asp-for="Id" />
    <input asp-for="Image" />

    <div class="row">
        <div class="col-md-12 px-2">
            <div class="form-group row required">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" placeholder="Product Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group required row">
                <label asp-for="BrandId" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="BrandId" asp-items="@Model.BrandSelectList">
                        <option></option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="ShortDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="ShortDescription" class="form-control" placeholder="Short Description" rows="3">
                        @Model.ShortDescription
                    </textarea>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="LongDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="LongDescription" class="form-control" placeholder="Long Description" rows="3">
                        @Model.LongDescription
                    </textarea>
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="Price" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="OldPrice" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="OldPrice" class="form-control" placeholder="Old Price" />
                    <span asp-validation-for="OldPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="PurchaseUrl" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="PurchaseUrl" class="form-control" placeholder="Purchase Url" rows="3">
                        @Model.PurchaseUrl
                    </textarea>
                    <span asp-validation-for="PurchaseUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Priority" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Priority" class="form-control" placeholder="Priority" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

<div id="AjaxFormResult_@ViewBag.ModalID"></div>
@section ModalFooter
{
    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-info" onclick="$('#AddEditProductForm').submit()">Save</button>
}

<script>

    $("#AddEditProductForm select").select2({
        placeholder: '',
        allowClear: true
    });

</script>
