@using VitalCareWeb.ViewModels.Doctor
@model DoctorViewModel

<div class="col-md-6 col-sm-12">
    <div class="card widget-profile pat-widget-profile">
        <div class="card-body">
            <div class="pro-widget-content">
                <div class="profile-info-widget">
                    <a href="#" class="booking-doc-img">
                        <img src="@Model.ImageUrl" alt="Doctor Image" style="height:150px !important;width:150px !important">
                    </a>
                    <div class="">
                        <h4>@Model.Name</h4>
                        <div class="patient-details">
                            <h5><i>@Model.SpecialityName</i></h5>
                            <h5><i class="fa fa-brands"></i>@Model.Qualifications</h5>
                            <h5 class="mb-0"><i class="feather-map-pin"></i> @Model.LocationName</h5>
                        </div>                       
                    </div>
                    <div class="mt-3">
                        <p style="color:#757575;font-size: 13px;font-weight: normal;text-align:left">
                           @Model.LongDescription
                        </p>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                            <ul class="nav text-md gap-3">
                                <li>
                                    <a href="@Model.FacebookUrl" target="_blank"><i class="fab fa-facebook"></i> </a>
                                </li>
                                <li>
                                    <a href="@Model.InstagramUrl" target="_blank"><i class="fab fa-instagram"></i></a>
                                </li>
                                <li>
                                    <a href="@Model.TwitterUrl" target="_blank"><i class="fab fa-twitter"></i> </a>
                                </li>
                            </ul>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>