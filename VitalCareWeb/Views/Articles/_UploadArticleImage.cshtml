@using VitalCareWeb.Constants;
@using VitalCareWeb.ViewModels.Article;
@model AddArticleImageViewModel
@{
    Layout = "_LayoutModal";
    ViewBag.Title = "Upload Article Image";
    ViewBag.ModalId = "UploadArticleImageViewModel";
    ViewBag.ModalSize = ModelConstants.ModalSize.Medium;
}

<form id="UploadArticleImageForm" class="pt-2 col-md-12"
      enctype="multipart/form-data"
      asp-action="@ViewContext.RouteData.Values["Action"]"
      asp-controller="@ViewContext.RouteData.Values["Controller"]"
      data-ajax="true"
      data-ajax-begin="validateForm_@ViewBag.ModalID"
      data-ajax-complete="unblockUI"
      data-ajax-failure="onAjaxError"
      data-ajax-update="#AjaxFormResult_@ViewBag.ModalID"
      data-ajax-method="POST">

    <input asp-for="ArticleId" hidden />

    <div class="row" style="margin-top:-35px;">
        <div class="col-md-12 px-2">
            <div class="form-group row required">
                <label class="col-sm-12 col-form-label">Select Image File (1200 x 800)</label>
                <div class="col-md-12">
                    <input asp-for="UploadedFile" name="UploadedFile" type="file" style="margin-top:5px;" accept="image/*" />
                    <span asp-validation-for="UploadedFile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

</form>

<div id="AjaxFormResult_@ViewBag.ModalID"></div>
@section ModalFooter
{
    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-info" onclick="$('#UploadArticleImageForm').submit()">Save</button>
}
