@using VitalCareWeb.Constants;
@using VitalCareWeb.ViewModels.CounterRecord;
@model AddEditCounterRecordViewModel

@{
    Layout = "_LayoutModal";
    ViewBag.Title = $"{@ViewContext.RouteData.Values["Action"]} Counter Record";
    ViewBag.ModalId = "AddEditCounterRecordViewModal";
    ViewBag.ModalSize = ModelConstants.ModalSize.Large;
}

<form id="AddEditCounterRecordForm" class="pt-2 col-md-12"
      asp-action="@ViewContext.RouteData.Values["Action"]"
      asp-controller="@ViewContext.RouteData.Values["Controller"]"
      data-ajax="true"
      data-ajax-begin="validateForm_@ViewBag.ModalID"
      data-ajax-complete="unblockUI"
      data-ajax-failure="onAjaxError"
      data-ajax-update="#AjaxFormResult_@ViewBag.ModalID"
      data-ajax-method="POST">

    <input asp-for="Id" />
    <input asp-for="Image" />

    <div class="row">
        <div class="col-md-12 px-2">
            <div class="form-group row required">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="CountInfo" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="CountInfo" class="form-control" placeholder="125 +" />
                    <span asp-validation-for="CountInfo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Priority" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Priority" class="form-control" placeholder="Priority" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

<div id="AjaxFormResult_@ViewBag.ModalID"></div>
@section ModalFooter
{
    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-info" onclick="$('#AddEditCounterRecordForm').submit()">Save</button>
}
