@using VitalCareWeb.Constants;
@using VitalCareWeb.ViewModels.Doctor;
@model AddEditDoctorViewModel

@{
    Layout = "_LayoutModal";
    ViewBag.Title = $"{@ViewContext.RouteData.Values["Action"]} Doctor";
    ViewBag.ModalId = "AddEditDoctorViewModel";
    ViewBag.ModalSize = ModelConstants.ModalSize.Large;
}

<form id="AddEditDoctorForm" class="pt-2 col-md-12"
      asp-action="@ViewContext.RouteData.Values["Action"]"
      asp-controller="@ViewContext.RouteData.Values["Controller"]"
      data-ajax="true"
      data-ajax-begin="validateForm_@ViewBag.ModalID"
      data-ajax-complete="unblockUI"
      data-ajax-failure="onAjaxError"
      data-ajax-update="#AjaxFormResult_@ViewBag.ModalID"
      data-ajax-method="POST">

    <input asp-for="Id" />
    <input asp-for="Image" hidden />

    <div class="row">
        <div class="col-md-12 px-2">
            <div class="form-group row required">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" placeholder="Doctor Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group required row">
                <label asp-for="SpecialityId" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="SpecialityId" asp-items="@Model.SpecialitySelectList">
                        <option></option>
                    </select>
                    <span asp-validation-for="SpecialityId" class="text-danger"></span>
                </div>
           </div>
            <div class="form-group required row">
                <label asp-for="LocationId" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="LocationId" asp-items="@Model.LocationSelectList">
                        <option></option>
                    </select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
           </div>
           <div class="form-group required row">
                <label asp-for="Gender" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Gender" asp-items="@Model.GenderSelectList">
                        <option></option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
           </div>
           <div class="form-group row required">
                <label asp-for="Qualifications" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Qualifications" class="form-control" placeholder="Qualifications" />
                    <span asp-validation-for="Qualifications" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="ShortDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="ShortDescription" class="form-control" placeholder="Short Description" rows="3">
                        @Model.ShortDescription
                    </textarea>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row required">
                <label asp-for="LongDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="LongDescription" class="form-control" placeholder="Long Description" rows="6">
                        @Model.LongDescription
                    </textarea>
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FacebookUrl" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="FacebookUrl" class="form-control" placeholder="Facebook Url" />
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="InstagramUrl" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="InstagramUrl" class="form-control" placeholder="Instagram Url" />
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TwitterUrl" class="col-sm-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="TwitterUrl" class="form-control" placeholder="Twitter Url" />
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

<div id="AjaxFormResult_@ViewBag.ModalID"></div>
@section ModalFooter
{
    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-info" onclick="$('#AddEditDoctorForm').submit()">Save</button>
}

<script>

    $("#AddEditDoctorForm select").select2({
        placeholder: '',
        allowClear: true
    });


</script>